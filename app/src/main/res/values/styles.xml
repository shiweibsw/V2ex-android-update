<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@drawable/gray_drawable</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textColorPrimary">@drawable/white</item>
        <item name="color">@color/white</item>
        <item name="android:windowBackground">@color/stand_bg</item>
        <item name="popupMenuStyle">@style/MyApp.PopupMenu</item>
        <item name="android:actionModeBackground">@drawable/gray_drawable</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColor">@color/font_black_2</item>

    </style>

    <style name="Coding.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenu.ListPopupWindow</item>
        <item name="android:windowBackground">@color/stand_bg</item>
        <item name="android:actionModeBackground">@drawable/gray_drawable</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="PopupMenu.ListPopupWindow" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">#313843</item>
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/font_black_2</item>
    </style>

    <style name="MyApp.PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/white</item>
    </style>

</resources>
